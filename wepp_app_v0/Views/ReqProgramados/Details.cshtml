@model wepp_app_v0.Models.Requerimiento
@{
    ViewBag.Title = "Num. Requerimiento " + Model.NumReq;
}
<h2>@ViewBag.Title</h2>
<fieldset>
    <legend>Datos Requerimientos</legend>
    <div class="display-label">
        Lider de Proyecto</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LiderProyecto.ApellidoPaterno) - @Html.DisplayFor(model => model.LiderProyecto.Nombre)
    </div>
    <div class="display-label">
        Ing. de Soluciones</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IdS.ApellidoPaterno) - @Html.DisplayFor(model => model.IdS.Nombre)
    </div>
    <div class="display-label">
        Año Priorizacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AnhoPriorizacion)
    </div>
    <div class="display-label">
        Periodo Priorizacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AnhoPriorizacion)
    </div>
    <div class="display-label">
        Estado</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Estado)
    </div>
    <div class="display-label">
        Prioridad</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Prioridad)
    </div>
    <div class="display-label">
        Fecha Priorizacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FechaPriorizacion)
    </div>
    <div class="display-label">
        Lider Usuario</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LiderUsuario)
    </div>
    <div class="display-label">
        Nivel Complejidad</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NivelComplejidad)
    </div>
    <div class="display-label">
        Unidad Negocio</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UnidadNegocio)
    </div>
</fieldset>
<fieldset>
    <legend>Detalle Actividades</legend>
    <table>
        <tr>
            <th>
                Orden Actividad
            </th>
            <th>
                Rol Interno
            </th>
            <th>
                Tipo Actividad
            </th>
            <th>
                Fecha Inicio
            </th>
            <th>
                Fecha Fin
            </th>
            <th>
                Avance
            </th>
            <th>
                Asignación
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model.Cronogramas[0].Actividades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdenActividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.personalInterno.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoActividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignacion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdActividad })
                </td>
            </tr>
        }
    </table>
</fieldset>
<p>
    @Html.ActionLink("Regresar", "Index")
</p>
