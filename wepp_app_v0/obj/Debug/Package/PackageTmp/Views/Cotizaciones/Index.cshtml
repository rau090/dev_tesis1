@model IEnumerable<wepp_app_v0.Models.Cotizacion>
@{
    ViewBag.Title = "Administrar Cotizaciones";
}
<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table>
    <tr>
        <th>
            Num. Requerimiento
        </th>
        <th>
            Tipo Cotización
        </th>
        <th>
            Esfuerzo Análisis
        </th>
        <th>
            Esfuerzo Construcción
        </th>
        <th>
            Esfuerzo Certificación
        </th>
        <th>
            Esfuerzo Gestión
        </th>
        <th>
            Esfuerzo Total
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.requerimiento.NumReq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCot)
            </td>

            <td>

                @{
                    var esfuerzoAnalisis = item.EsfuerzoAnalisisFuncional + item.EsfuerzoAnalisisTecnico;
                    ViewBag.EsfuerzoAnalisis = esfuerzoAnalisis;
                    }
                <!--@Html.Display((@item.EsfuerzoAnalisisFuncional + @item.EsfuerzoAnalisisTecnico).ToString())-->
                @ViewBag.EsfuerzoAnalisis
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsfuerzoConstruccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsfuerzoCertificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsfuerzoGestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsfuerzoTotal)
            </td>
            
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdCotizacion }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdCotizacion })
            </td>
        </tr>
    }
</table>
