@model IEnumerable<wepp_app_v0.Models.Vacacion>

@{
    ViewBag.Title = "Administrar Vacaciones";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrar Nueva Vacacion", "Create")
</p>
<table>
    <tr>
        <th>
            Año
        </th>
        <th>
            Fecha Inicio
        </th>
        <th>
            Fecha Fin
        </th>
        
        <th>
            Duración
        </th>
        <th>
            Persona
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Anho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Periodo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personalInterno.ApellidoMaterno)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdVacacion })
            @Html.ActionLink("Detalle", "Details", new { id=item.IdVacacion })
        </td>
    </tr>
}

</table>
